<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.blog.mapper.UserMapper">
    <select id="getUserbyid" resultType="com.aaa.blog.entity.User">
        select *
        from usertable where id=#{id}
    </select>
    <select id="getbyUsername" resultType="com.aaa.blog.entity.User">
        select *
        from usertable where  username=#{username};
    </select>
</mapper>